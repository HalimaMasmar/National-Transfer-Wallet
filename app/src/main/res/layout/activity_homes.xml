<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Homes">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="83dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/Transfert"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapelogin"
            android:fontFamily="@font/r"
            android:padding="15dp"
            android:shadowColor="@color/tealafrica"
            android:text="Effectuer un virement"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="502dp" />

        <Button
            android:id="@+id/Historique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shapelogin"
            android:fontFamily="@font/r"
            android:padding="15dp"
            android:shadowColor="@color/tealafrica"
            android:text="Virement Historique"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="580dp" />

        <Button
            android:id="@+id/restitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shapelogin"
            android:fontFamily="@font/r"
            android:padding="15dp"
            android:shadowColor="@android:color/transparent"
            android:text="Restituer"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="654dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:outlineAmbientShadowColor="@color/tealafrica"
        android:outlineSpotShadowColor="@color/tealafrica"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">


        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text="Informations Personnelles "
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:textSize="20dp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/r"
                android:text="Nom:"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/r"
                android:text=":"
                android:textSize="15dp"
                /></LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:text="Prenom:"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text="Numéro de téléphone:"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="20dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text=""
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="20dp"
                android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text="Carte ID :"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/cardid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text=""
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text="Adresse :"
                android:layout_marginLeft="8dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text=""
                android:layout_marginLeft="8dp"
                android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="180dp"
                android:layout_marginTop="-287dp"
                android:background="@drawable/logoutbutton"
                android:text="Deconnexion"
                android:textSize="10dp"></Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>








</RelativeLayout>
